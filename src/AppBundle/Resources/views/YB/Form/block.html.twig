{% block app_bundle_block_type_row %}
    <div class="col-12 row venue-block">
        <div class="col-12"><h3>Bloc</h3></div>
        <div class="col-12 row">
            <div class="col-12 col-md-6">
                {{ form_row(form.name) }}
                {{ form_row(form.type) }}
                <div class="hide-if-standup" id="free-placement">{{ form_widget(form.freeSeating) }}</div>
                {{ form_row(form.capacity) }}
            </div>
            <div class="col-12 col-md-6 row hide-if-standup hide-if-free-placement">
                <div class="col-12" id="is-squared">{{ form_widget(form.notSquared) }}</div>
                <div class="col-12 text-text-muted font-italic pb-2 hide-if-squared">
                    Si votre bloc n'est pas rectangulaire, vous pourrez renseigner les différentes rangées et
                    leur nombre de siège une fois la salle créée via le bouton "Configurer les rangées" dans votre espace "Mes salles".
                </div>
                <div class="col-12 col-md-6 show-if-squared">{{ form_row(form.nbRows) }}</div>
                <div class="col-12 col-md-6 show-if-squared">{{ form_row(form.rowLabel) }}</div>
                <div class="col-12 show-if-squared"><hr size="2" color="grey"></div>
                <div class="col-12 col-md-6 show-if-squared">{{ form_row(form.nbSeatsPerRow) }}</div>
                <div class="col-12 col-md-6 show-if-squared">{{ form_row(form.seatLabel) }}</div>
            </div>
        </div>
        <div class="col-12">
            <hr size="4" color="green">
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function() {
            $('select.block-type').change(function () {
                    if ($(this).val() == 'Debout') {
                        $(this).closest('.venue-block').find('.hide-if-standup').hide();
                    } else {
                        $(this).closest('.venue-block').find('.hide-if-standup').show();
                    }
                }
            );
        });
        $('#is-squared input[type="checkbox"]').on('change', function(){
            $(this).closest('.venue-block').find('.show-if-squared').toggle(!this.checked);
            $(this).closest('.venue-block').find('.hide-if-squared').toggle(this.checked);
        });
        $('#is-squared input[type="checkbox"]').trigger('change');

        $('#free-placement input[type="checkbox"]').on('change', function(){
            $(this).closest('.venue-block').find('.hide-if-free-placement').toggle(!this.checked);
        });
        $('#free-placement input[type="checkbox"]').trigger('change');
    </script>
{% endblock %}