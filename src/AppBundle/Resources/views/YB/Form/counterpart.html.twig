{% block app_bundle_counter_part_type_row %}
    <div class="row counterpart-row">
        <h3><i class="fas fa-ticket-alt text-secondary"></i> Ticket</h3>
        <div class="col-12">
            {{ form_widget(form.translations) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_widget(form.isChildEntry) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.maximumAmount) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.price) }}
        </div>
        <div class="col-12 col-md-6">
            {{ form_row(form.thresholdIncrease) }}
        </div>
    </div>
{% endblock %}