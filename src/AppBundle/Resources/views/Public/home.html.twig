{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="col-12">
                    <h3 class="rounded-title">News</h3>
                    <div class="row">
                    {% for new in news %}
                        {% if new.type == 'artist' %}
                            {% include 'AppBundle:Public/Card:artist.html.twig' with {'artist': new.object, 'md':6, 'xs': 12} %}
                        {% elseif new.type == 'contract' %}
                            {% include 'AppBundle:Public/Card:contract_artist.html.twig' with {'contract': new.object, 'md':6, 'xs': 12} %}
                        {% endif %}
                    {% endfor %}
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="col-12">
                    <h3 class="rounded-title">Concerts Ã  venir</h3>
                    <div class="row">
                        {% for crowdfunding in crowdfundings %}
                            {% include 'AppBundle:Public/Card:contract_artist.html.twig' with {'contract': crowdfunding, 'md':6, 'xs': 12} %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
