{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <h3 class="text-center mb-4">Contact & boîte à idées</h3>

        <p mb-3>
            Une idée ? Une question ? Un conseil ? Un intérêt pour le projet ?
            Vous êtes au bon endroit. Remplissez le formulaire suivant pour nous contacter ; nous vous répondrons dans les plus brefs délais !
        </p>

        <div class="content-box">
            <div id="suggestionbox_form" class="content-box-content">
                {{ render(controller('AppBundle:Public:suggestionBoxForm')) }}
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="suggestionmodal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <!-- content of the modal itself ➡️ in this case the form -->
                    <div class="modal-body">
                        <div class="container">
                            <!-- design of the modal header -->
                            <div class="login-header">
                                <div class="login-header-line"></div>
                                <!-- titre de la section -->
                                <div class="login-header-title">
                                    <h6>Vous êtes sûrs ?</h6>
                                </div>
                            </div>
                            <form>
                                <button id="validate-sb-send" class="btn btn-primary sharp text-uppercase">Valider</button>
                                <button id="cancel-sb-send" class="btn btn-warning">Annuler</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block additional_javascripts %}
    <script>
        $('#suggestionmodal').modal({'show': false});
        $('#cancel-sb-send').click(function() {
            $('#suggestionmodal').modal('hide');
        });

        $('#validate-sb-send').click(function() {
           ajaxSendForm();
            $('#suggestionmodal').modal('hide');
        });

        function ajaxSendForm() {
            var url = "{{ path('suggestionBox_form') }}";
            var formSerialize = $('form.suggestionBoxForm').serialize();
            // TODO loader
            $.post(url, formSerialize, function(response) {
                $('#suggestionbox_form').html(response);
                initform();
            }, 'HTML');
        }

        function initform() {
            $('.suggestionBoxForm').submit(function(e) {
                e.preventDefault();

                if($('.suggestion_form_email').length && !$('.suggestion_form_email').val()) {
                    $('#suggestionmodal').modal('show');
                }

                else {
                    ajaxSendForm();
                }
            });
        }

        initform();
    </script>

{% endblock %}