{% extends ':patterns:card.html.twig' %}

{% block card_content %}

    {% set rotation = false %}
    {% set src = asset('images/hall-card-default.jpg') %}

    {% if hall.photos is not empty %}
        {% set rotation = true %}
        {% set imgstring = '[' %}
        {% for photo in hall.photos %}
            {% if loop.first %}
                {% set src = absolute_url(asset(hall.webPath(photo))) %}
            {% endif %}
            {% set imgstring = imgstring ~ '"' ~ absolute_url(asset(hall.webPath(photo))) ~ '"' %}
            {% if not loop.last %}
                {% set imgstring = imgstring ~ "," %}
            {% else %}
                {% set imgstring = imgstring ~ ']' %}
            {% endif %}
        {% endfor %}
    {% endif %}

    {% if no_rotation_hall is defined and no_rotation_hall %}
        {% set rotation = false %}
    {% endif %}

    <div class="um-card{% if rotation %} images-rotation{% endif %}{% if bgwhite %} bg-white{% endif %}" {% if rotation %}data-images='{{ imgstring }}'{% endif %}>

        <div class="um-card-header" style="background-image: url({{ src }});">
        </div>

        <!-- this is the content of the card with an optionnal span for ⭐ -->
        <div class="um-card-content">
            <h5>{{ hall.name }}</h5>
            <p>{{ preview(hall.getShortDescription(), 100)|raw }}</p>
        </div>

        <!-- this is the link that the card need to take to -->
        <a class="um-card-link" href="{{ path('hall', {'id':hall.id}) }}"></a>
    </div>
{% endblock %}