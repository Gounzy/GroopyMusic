{% extends 'base.html.twig' %}

{% block headtitle %}Bénévoles | Un-Mute{% endblock %}

{% block header %}
    {% include ':patterns:header.html.twig' with {'title': 'Bénévoles', 'img':''} %}
{% endblock %}

{% block body %}
    <div class="container">
        <p class="my-4 d-none d-md-block font-weight-bold w-50">
            Vous aimeriez participer à la mise en place d'un de nos festivals ?
            Vous souhaitez aider notre équipe d'une façon ou d'une autre ?
            Remplissez le formulaire suivant ou <a href="{{ path('suggestionBox') }}">contactez-nous</a> !
        </p>

        <div class="form-block mb-5">
            <div class="form-header"><h2>Proposition de bénévolat</h2></div>
            <div class="form-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="text-center">
                    <button type="submit"  name="g-recaptcha-response"
                            class="g-recaptcha btn btn-primary submit"
                            data-sitekey="6LfklYEUAAAAAMj_B1O7c8RvimKn5GFunxRPyiBz" data-callback="onrecaptcha"><i class="fa fa-paper-plane" aria-hidden="true"></i> Envoyer</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


{% block additional_javascripts %}
    {{ parent() }}
    <script src='https://www.google.com/recaptcha/api.js' async defer></script>
    <script async defer>
        function onrecaptcha() {
            $('form').submit();
        }
    </script>
{% endblock %}