{% extends 'AppBundle:Mail/YB:baseEmailLayout.html.twig' %}

{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
		    {{ email_content('yb.reminders.organizers.event_created', {
		        '%event%': campaign.getTitle,
		        '%url%': email_link(url('yb_campaign', {'id': campaign.id})), 
		        '%url_long%': email_link(url('yb_campaign', {'id': campaign.id, 'slug': campaign.getSlug()})), 
		    })|raw }}
		{% endblock %}
    {% endspaceless %}
{% endautoescape %}