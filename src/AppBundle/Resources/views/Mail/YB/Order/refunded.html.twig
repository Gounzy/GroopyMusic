{% extends 'AppBundle:Mail/YB:baseEmailLayout.html.twig' %}

{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('yb.order.refunded_'~reason, {
                '%name%': cf.physicalPerson.displayName,
                '%event%': email_link(url('yb_campaign', {'id': campaign.id}), campaign.getTitle),
                '%amount%': cf.amount,
            })|raw }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}