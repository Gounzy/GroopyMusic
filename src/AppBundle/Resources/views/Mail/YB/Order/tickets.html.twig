{% extends 'AppBundle:Mail/YB:baseEmailLayout.html.twig' %}

{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('yb.order.tickets', {
                '%name%': cf.physicalPerson.displayName,
                '%event%': email_link(url('yb_campaign', {'id': cf.contractArtist.id}), cf.contractArtist.getTitle),
                '%intro%': newly_successful ? ' <br /> <br />Félicitations ! La campagne "' ~ cf.contractArtist.getTitle ~ '" à laquelle vous avez contribué a été validée par son organisateur.' : '',
            })|raw }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}