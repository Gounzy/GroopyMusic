{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('concert.artist.reminder', {
                '%days%': days,
                '%artist%': contract.artist.artistName,
                '%places%': places,
                '%date%': contract.dateConcert|date('d/m/Y'),
                '%step%': contract.step
            })|raw }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}