{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('concert.artist.failure', {
                '%step%': contract.step.name,
                '%date%': contract.preferences.date|date('d/m/Y'),
                '%url%': email_link(absolute_url(path('homepage')), 'Un-Mute')
            })|raw }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}