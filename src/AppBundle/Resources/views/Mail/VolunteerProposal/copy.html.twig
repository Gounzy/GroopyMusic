{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('volunteer_proposal.copy', {
                '%name%': inscription.displayName,
                '%email%': inscription.email,
                '%festival%': email_link(absolute_url(path('artist_contract', {'id': inscription.contractArtist.id})), inscription.contractArtist.getTitle),
                '%contact_url%': email_link(absolute_url(path('suggestionBox'))),
                '%commentary%': inscription.commentary
            })|raw }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}