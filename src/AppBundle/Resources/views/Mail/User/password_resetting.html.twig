{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}
            {%- autoescape false -%}
                {{ 'resetting.email.subject'|trans({'%username%': user.username}, 'FOSUserBundle') }}
            {%- endautoescape -%}
        {% endblock %}
        {% block content %}
            {%- autoescape false -%}
                {{ 'resetting.email.message'|trans({'%username%': user.username, '%confirmationUrl%':confirmationUrl}, 'FOSUserBundle')|nl2br }}
            {%- endautoescape -%}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}
