{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}

{% trans_default_domain 'emails' %}

{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}
        {% block content %}
            <div>
                <p>{{ email_content('reward_attribution.content',{
                        '%reward_name%': reward.name,
                        '%content%': content,
                        '%rewards_url%' :  email_link(url('user_rewards'), 'reward_attribution.my_rewards'|trans)
                    })|trans|raw|nl2br }}</p>
            </div>
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}