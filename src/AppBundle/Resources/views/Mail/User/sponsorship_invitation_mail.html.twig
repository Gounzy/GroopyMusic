{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}
        {% block content %}
            <div>
                <p>{{ email_content('sponsorship_invitation.content',{
                        '%content%': content,
                        '%contract_name%': contractArtist,
                        '%user_name%': user.displayName,
                        '%url%': email_link(url('sponsorship_link', {'token':token}))
                    })|trans|raw|nl2br }}</p>
            </div>
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}