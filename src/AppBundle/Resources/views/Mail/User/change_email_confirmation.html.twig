{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('change_email.confirmation', {
                    '%username%': user.firstname,
                    '%confirmationUrl%': absolute_url(path('user_change_email_check', {'token': user.askedEmailToken}))
                })|raw
            }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}