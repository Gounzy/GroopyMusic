{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {% set url = absolute_url(path('user_change_email_check', {'token': user.askedEmailToken})) %}
            {{ email_content('change_email.confirmation', {
                    '%username%': user.firstname,
                    '%confirmationUrl%': '<a href="'~url~'">'~url~'</a>'
                })|raw
            }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}