{% extends 'AppBundle:Mail:baseEmailLayout.txt.twig' %}

{% block subject %}
    {%- autoescape false -%}
        {{ 'resetting.email.subject'|trans({}, 'FOSUserBundle') }}
    {%- endautoescape -%}
{% endblock %}

{% autoescape false %}
    {% block content %}
        {{ 'resetting.email.message'|trans({'%username%': user.username, '%confirmationUrl%':confirmationUrl}, 'FOSUserBundle')|nl2br }}
    {% endblock %}
{% endautoescape %}

{% block body_html %}
    {% include 'AppBundle:Mail/User:password_resetting.html.twig' with {'subject': 'resetting.email.subject'|trans({}, 'FOSUserBundle')}%}
{% endblock %}