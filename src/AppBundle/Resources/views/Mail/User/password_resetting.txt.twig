{% extends 'AppBundle:Mail:baseEmailLayout.txt.twig' %}

{# Careful, subject is duplicated below #}
{% block subject %}{{ subject|default('Réinitialisation de votre mot de passe') }}{% endblock %}

{% autoescape false %}
    {% block content %}
        Hello {{ user.username }} !

        Vous pouvez réinitialiser votre mot de passe via le lien suivant : {{ confirmationUrl }}
    {% endblock %}
{% endautoescape %}

{% block body_html %}
    {% include 'AppBundle:Mail/User:password_resetting.html.twig' with {'subject': subject|default('Réinitialisation de votre mot de passe')} %}
{% endblock %}