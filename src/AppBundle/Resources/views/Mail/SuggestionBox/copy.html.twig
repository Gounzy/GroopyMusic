{% extends 'AppBundle:Mail:baseEmailLayout.html.twig' %}
{% autoescape false %}
    {% spaceless %}
        {% block title %}{{ subject }}{% endblock %}

        {% block content %}
            {{ email_content('contact.copy', {
                '%type%': suggestionBox.type.name,
                '%object%': suggestionBox.object
            })|raw }}

            {{ suggestionBox.message|nl2br }}
        {% endblock %}
    {% endspaceless %}
{% endautoescape %}