{% extends '@App/PDF/yb_layout.html.twig' %}
{% trans_default_domain 'yb' %}

{% block additional_styles %}
{% endblock %}

{% block page %}
    <page backtop="30mm" backbottom="7mm" backleft="10mm" backright="10mm">
        {% block header %}
        {% endblock %}
        {% block footer %}
        {% endblock %}
        {{ block('header') }}
        {{ block('footer') }}
        <p>
            --Organisation-- <br />
            Représentée par ----<br />
            --adresse-- <br />
            --codepostal-- <br />
        </p>
        <p align="right">
            Un-mute asbl <br />
            --adresse-- <br />
            --codepostal-- <br />
        </p>
        <p>
            Namur, le --/--/20-- <br />
        </p>

        <h2>Campagne AAA - Facture sur les recettes du 10/2018</h2>

        <table>
            <tr>
                <th>Description</th>
                <th>Prix unitaire HT</th>
                <th>Quantité</th>
                <th>Montant</th>
            </tr>
            {% for i in 1..3 %}
                {% set total = 10 %}
                {% set tva = 0.06 %}
                {% set quantite = 10 + 5*i %}
                {% set totalhtva = total / (1+tva) %}
                <tr>
                    <td>Ticket {{ i }}</td>
                    <td>{{ totalhtva|round(2) }}</td>
                    <td>{{ quantite }}</td>
                    <td>{{ (totalhtva * quantite)|round(2) }}</td>
                </tr>
                <!--tr>
                    <td>Ticket {{ i }} - TVA</td>
                    <td>{{ (totalhtva * quantite)|round(2) }}</td>
                    <td>{{ tva * 100 }}%</td>
                    <td>{{ total * quantite|round(2) }}</td>
                </tr-->
            {% endfor %}
        </table>

        <p>1234.56€ seront versés sur le compte BE01 2345 6789 0987 le 08/11/2018</p>
    </page>
    <page backtop="30mm" backbottom="7mm" backleft="10mm" backright="10mm">
        {% for i in 1..3 %}
            <p>Ticket {{ i }}</p>
            <table>
                <tr>
                    <th>Num. commande</th>
                    <th>Quantité</th>
                    <th>Montant payé</th>
                </tr>
                {% for j in 1..4 %}
                    <tr>
                        <td>AB012345</td>
                        <td>{{ j }}</td>
                        <td>{{ 10 * j }}</td>
                    </tr>
                {% endfor %}
            </table>
        {% endfor %}
    </page>
{% endblock %}