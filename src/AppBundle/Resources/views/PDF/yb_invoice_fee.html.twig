{% extends '@App/PDF/yb_layout.html.twig' %}
{% trans_default_domain 'yb' %}

{% block additional_styles %}
{% endblock %}

{% block page %}
    <page backtop="30mm" backbottom="7mm" backleft="10mm" backright="10mm">
        {% block header %}
        {% endblock %}
        {% block footer %}
        {% endblock %}
        {{ block('header') }}
        {{ block('footer') }}
        <p>
            Un-mute <br />
            --adresse-- <br />
            --codepostal-- <br />
        </p>
        <p align="right">
            Organisation <br />
            --adresse-- <br />
            --codepostal-- <br />
        </p>
        <p>
            Namur, le --/--/20-- <br />
        </p>

        <h2>Campagne AAA - Facture de commission du 10/2018</h2>

        <table border="1" style="width: 100%;">
            <tr>
                <th>Description</th>
                <th>Prix unitaire</th>
                <th>Quantité</th>
                <th>Commission</th>
            </tr>
            {% for i in 1..3 %}
                {% set unitPrice = 5*i %}
                {% set quantity = 10 + 5*i %}
                {% set total = unitPrice * quantity %}

                {% set tva = 0.06 %}

                {% set comMini = 0.4 %}
                {% set comVar = 0.05 %}

                {% set totalhtva = total / (1+tva) %}

                {% if unitPrice * comVar < comMini %}
                    {% set fee = comMini %}
                {% else %}
                    {% set fee = unitPrice * comVar %}
                {% endif %}
                <tr>
                    <td>Ticket {{ i }}</td>
                    <td>{{ unitPrice|round(2) }}</td>
                    <td>{{ quantity }}</td>
                    <td>{{ fee * quantity|round(2) }}</td>

                </tr>
            {% endfor %}
            <tr class="text-bold">
                <td colspan="3">Total HTVA</td>
                <td>000.00€</td>
            </tr>
            <tr class="text-bold">
                <td colspan="3">TVA</td>
                <td>000.00€</td>
            </tr>
            <tr class="text-bold">
                <td colspan="3">Total TVAC</td>
                <td>000.00€</td>
            </tr>
        </table>
    </page>
{% endblock %}