{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h3 class="text-center mb-3">{{ 'validate_ownership.title'|trans|raw }} {{ request.artist.artistname }}</h3>

        {% if request.cancelled %}
            <p class="alert alert-error">{{ 'validate_ownership.cancelled'|trans|raw }}</p>
        {% else %}
            <div class="content-box">
                <div class="content-box-content">
                    <p>
                        {{ 'validate_ownership.non_cancelled'|trans({'%demander%': request.demander.displayName, '%artist_url%': path('artist_profile', {'id': request.artist.id}), '%artist%': request.artist.artistname})|raw }}.
                    </p>
                    {{ form_start(form) }}
                        {{ form_row(form.accept) }}
                        {{ form_row(form.refuse) }}
                    {{ form_rest(form) }}
                </div>
            </div>

        {% endif %}
    </div>
{% endblock %}
