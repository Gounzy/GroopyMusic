<div id="sponsorship-invitations-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="sponsorship-invitations-modal-form">
                <div class="modal-body">
                    <h2 class="text-center">Invitez des amis à participer à l'événements</h2>
                    <div id="info-sponsorship" class="text-center">
                        <span class="text-primary">Invite tes amis à participer à l'événements et profitez de la récompense de parrainage</span>
                    </div>
                    <br>
                    <div id="sponsorship-invitations-modal-email-inputs-div">
                        <div class="form-group">
                            <label for="email-inputs">Adresse emails</label>
                            <input type="email" class="sponsorship-invitations-modal-email-inputs form-control"
                                   placeholder="Entrer une adresse email">
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn" onclick="removeEmailInput()"> -</button>
                        <button type="button" class="btn" onclick="addEmailInput()"> +</button>
                    </div>
                    <div class="form-group">
                        <label for="invitation-message">Message d'invitations</label>
                        <textarea class="form-control" id="invitation-message" rows="5"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler
                    </button>
                    <button id="send-email-button" type="button" class="btn btn-primary" onclick="sendEmail()">
                        Confirmer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>