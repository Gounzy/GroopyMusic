{% if not object.refunded %}
    {% if object.isAskedRefundBy(app.user) %}
        <a class="btn btn-sm btn-default disabled">Remboursement demandé</a>
    {% else %}
        <a class="btn btn-sm" href="{{ admin.generateObjectUrl('refund', object) }}">Rembourser</a>
        {% if object.isAskedRefundByOne %}
            {% set askings = object.askingrefund %}
            (remboursement proposé par {% for asking in askings %}{{ asking.displayName}} {% endfor %})
        {% endif %}
    {% endif %}
{% endif %}