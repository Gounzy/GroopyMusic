<div id="summaryModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title">RÃ©capitulatif</h3>
            </div>
            <div class="modal-body">
                <div id="div-alert">
                </div>
                <div class="form-inline clearfix">
                    <div class="pull-left">
                        <a class="btn btn-link" data-toggle="collapse"
                           data-target="#recipients">Afficher/cacher les destinataires</a>
                    </div>
                </div>
                <div id="recipients" class="collapse collapsable">
                    <table class="table table-bordered table-striped sonata-ba-list">
                        <thead>
                        <tr>
                            <td><b>Nom complet</b></td>
                            <td><b>Adresse Email</b></td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.displayName }}</td>
                                <td>{{ user.getEmail }}</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                        {% for mail in emails %}
                            <tr>
                                <td>Nouveau contact</td>
                                <td>{{ mail }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <br>
                <div class="form-group">
                    <label for="mailObject">Objet de l'email</label>
                    <input id="mailObject" type="text" class="form-control" value="{{ object }}" disabled>
                </div>
                <div class="form-group">
                    <label for="mailContent">Contenu de l'email</label>
                    <textarea id="mailContent" class="form-control" rows="10" disabled>{{ content }}</textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><span
                            class="glyphicon glyphicon-remove"></span>&nbsp;Annuler
                </button>
                <button id="send-email-button" type="button" class="btn btn-primary" onclick="sendEmail()"><span
                            class="glyphicon glyphicon-ok"></span>&nbsp;Confirmer
                </button>
            </div>
        </div>
    </div>
</div>