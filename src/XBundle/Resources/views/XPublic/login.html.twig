{% extends "XBundle::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="container py-5">
        <div class="x-login-content">
            {% if error is defined and error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="x-login-body">
                <div class="container">
                    <!-- design of the x-login header -->
                    <div class="login-header">
                        <!-- titre de la section -->
                        <h3 class="text-center">CONNEXION</h3><br>
                    </div>
                    <form action="{{ path('fos_user_security_check_x') }}" method="post">
                        <div class="form-group">
                            <input type="email" class="form-control" id="username" name="_um_username" {% if last_username is defined %}value="{{ last_username }}"{% endif %} placeholder="{{ 'security.login.username'|trans }}" required="required">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="_um_password" placeholder="{{ 'security.login.password'|trans }}" required="required">
                        </div>
                        <div class="form-group">
                            <label class="custom-control custom-checkbox pr-3" for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="form-check-input custom-control-input" />
                                <span class="custom-control-indicator"></span>
                                <span class="custom-control-description">{{ 'security.login.remember_me'|trans }}</span>
                            </label>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-primary text-uppercase position-relative um-login-button text-center" type="submit" id="_submit_um_connection" name="_submit"><!--
                                -->Connexion<!--
                            --></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}