{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container">
        <h3 class="text-center mb-3">Bienvenue sur Un-Mute</h3>

        <div class="content-box">
            <div class="content-box-contenr">
                {% if app.user %}
                    <p class="text-center">{{ 'registration.confirmed'|trans({'%username%': user.firstname}) }}</p>
                {% else %}
                    <p class="text-center">Vous avez bien vérifié votre compte. Bienvenue chez Un-Mute !</p>
                {% endif %}

                {% if targetUrl %}
                    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                {% endif %}
            </div>
        </div>

    </div>
{% endblock fos_user_content %}
