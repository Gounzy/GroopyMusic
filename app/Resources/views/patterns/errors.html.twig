<div class="container">
    {% for message in app.request.session.flashbag.get('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ message }}
        </div>
    {% endfor%}
</div>

{% spaceless %}
    {% if (errors is defined and errors|length > 0) or (form is defined and not form.vars.valid) %}
        <div id="errors">
            {% if form is defined %}
                {{ form_errors(form) }}
            {% endif %}
            {% if errors is defined and errors|length > 0 %}
                <ul>
                    {% for error in errors %}
                        <li class="error">{{ error }}</li><br/>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    {% endif %}
{% endspaceless %}