<div class="container">
    {% for message in app.request.session.flashbag.get('error') %}
        {{ utils.error(message) }}
    {% endfor%}

{% spaceless %}
    {% if (errors is defined and errors|length > 0) or (form is defined and not form.vars.valid) %}
        <div id="errors">
            {% if form is defined and not form.vars.valid %}
                {{ utils.error('Une erreur est survenue lors de la soumission du formulaire. Veuillez vérifier les informations et réessayer.') }}
                {{ form_errors(form) }}
            {% endif %}
            {% if errors is defined and errors|length > 0 %}
                <ul>
                    {% for error in errors %}
                        <li class="error">{{ error }}</li><br/>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    {% endif %}
{% endspaceless %}
</div>