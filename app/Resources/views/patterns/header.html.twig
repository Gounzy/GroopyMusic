
{% include ':patterns:perma-links.html.twig' with {'home_header': true} %}

<div class="jumbotron jumbotron-fluid position-relative">
    <div class="container justify-content-center align-items-center text-center position-relative">
        <a id="logo-header-container" href="{{ path('homepage') }}"><img id="logo" class="img-fluid" src="{{ asset('images/logo/logo.png') }}" /></a>

        <div id="logo-video-container">
            <video class="text-center mx-auto" id="logo-video" loop autoplay>
                <source src="{{ asset('images/logo/animated-logo.mp4') }}" type="video/mp4" />
                <source src="{{ asset('images/logo/animated-logo.ogv') }}" type="video/ogg" />
                <source src="{{ asset('images/logo/animated-logo.webm') }}" type="video/webm" />
                <img id="logo-video-alternative" class="img-fluid" src="{{ asset('images/logo/logo.png') }}" />
            </video>
        </div>

        <h1 class="text-white text-bold">Un-Mute</h1>

        <div id="headline" class="col-12 text-center">{{ 'header.slogan'|trans }}</div>

        <div class="container pb-3" id="home-carousel-row">
            <div class="jcarousel mx-auto my-auto">
                <ul>
                    {% for crowdfunding in crowdfundings %}
                        <li>
                            {% include 'AppBundle:Public/Card:contract_artist.html.twig' with {'contract': crowdfunding, 'md':12, 'xs': 12, 'news': false, 'bgwhite': true, 'clickable': false, 'card_classes': ['pb-3']} %}
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="mt-3{% if crowdfundings|length <= 3 %} d-block d-md-none{% endif %}">
                    <div class="jcarousel-prev jcarousel-control btn btn-outline-secondary rounded-circle d-inline-block"><img class="img-fluid" src="{{ asset('images/icons/arrow-left.svg') }}" /></div>
                    <div class="jcarousel-next jcarousel-control btn btn-outline-secondary rounded-circle d-inline-block"><img class="img-fluid" src="{{ asset('images/icons/arrow-right.svg') }}" /></div>
            </div>
        </div>
    </div>
</div>

{% include ':patterns:header_nav.html.twig' with {'home_header': true} %}